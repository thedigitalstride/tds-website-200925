# Development-specific environment variables
# These settings help prevent draftMode context errors in local development

# Increase Node.js memory for development
NODE_OPTIONS="--max-old-space-size=8192"

# Next.js development optimizations
NEXT_TELEMETRY_DISABLED=1

# Webpack optimizations for better HMR stability
WATCHPACK_POLLING=false

# Development server settings
# Helps with stability during hot reloading
NEXT_PRIVATE_FAST_REFRESH=true

# Live Preview Loading Indicator
# Shows a loading spinner when preview is re-rendering in admin panel
# Set to 'true' to enable, remove or set to 'false' to disable
NEXT_PUBLIC_ENABLE_PREVIEW_LOADING=false